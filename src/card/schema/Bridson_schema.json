{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "initialization": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "execution": {
            "type": "object",
            "properties": {
                "path": {
                    "type": "string"
                },
                "commands": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "input": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "path": {
                                "type": "string"
                            },
                            "variables": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "name": {
                                            "type": "string"
                                        },
                                        "method": {
                                            "type": "string"
                                        },
                                        "placeholder": {
                                            "type": "string"
                                        }
                                    },
                                    "required": [
                                        "name",
                                        "method",
                                        "placeholder"
                                    ]
                                }
                            },
                            "save": {
                                "type": "boolean"
                            },
                            "type": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "name",
                            "path",
                            "variables",
                            "save",
                            "type"
                        ]
                    }
                },
                "output": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "path": {
                                "type": "string"
                            },
                            "variables": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "name": {
                                            "type": "string"
                                        },
                                        "method": {
                                            "type": "string"
                                        },
                                        "block": {
                                            "type": "string"
                                        },
                                        "id": {
                                            "type": "integer"
                                        }
                                    },
                                    "required": [
                                        "name",
                                        "method",
                                        "block",
                                        "id"
                                    ]
                                }
                            },
                            "save": {
                                "type": "boolean"
                            },
                            "type": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "name",
                            "path",
                            "variables",
                            "save",
                            "type"
                        ]
                    }
                }
            },
            "required": ["path", "commands", "input", "output"]
        }
    },
    "type": "object",
    "properties": {
        "Scan": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "save_dir": {
                    "type": "string"
                }
            },
            "required": ["name", "save_dir"],
            "additionalProperties": false
        },
        "Sampling": {
            "type": "object",
            "properties": {
                "Method": {
                    "type": "string"
                },
                "Variables": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "description": {
                                "type": "string"
                            },
                            "distribution": {
                                "type": "object",
                                "properties": {
                                    "type": {
                                        "type": "string"
                                    },
                                    "parameters": {
                                        "type": "object"
                                    }
                                },
                                "required": ["type", "parameters"],
                                "allOf": [
                                    {
                                        "if": {
                                            "properties": {
                                                "type": {
                                                    "const": "Flat"
                                                }
                                            }
                                        },
                                        "then": {
                                            "properties": {
                                                "parameters": {
                                                    "type": "object",
                                                    "properties": {
                                                        "min": {
                                                            "type": "number"
                                                        },
                                                        "max": {
                                                            "type": "number"
                                                        },
                                                        "length": {
                                                            "type": "number"
                                                        }
                                                    },
                                                    "required": [
                                                        "min",
                                                        "max",
                                                        "length"
                                                    ],
                                                    "additionalProperties": false
                                                }
                                            }
                                        }
                                    },
                                    {
                                        "if": {
                                            "properties": {
                                                "type": {
                                                    "const": "Log"
                                                }
                                            }
                                        },
                                        "then": {
                                            "properties": {
                                                "parameters": {
                                                    "type": "object",
                                                    "properties": {
                                                        "min": {
                                                            "type": "number"
                                                        },
                                                        "max": {
                                                            "type": "number"
                                                        },
                                                        "length": {
                                                            "type": "number"
                                                        }
                                                    },
                                                    "required": [
                                                        "min",
                                                        "max",
                                                        "length"
                                                    ],
                                                    "additionalProperties": false
                                                }
                                            }
                                        }
                                    },
                                    {
                                        "if": {
                                            "properties": {
                                                "type": {
                                                    "const": "Logit"
                                                }
                                            }
                                        },
                                        "then": {
                                            "properties": {
                                                "parameters": {
                                                    "type": "object",
                                                    "properties": {
                                                        "location": {
                                                            "type": "number"
                                                        },
                                                        "scale": {
                                                            "type": "number"
                                                        }
                                                    },
                                                    "required": [
                                                        "location",
                                                        "scale",
                                                        "length"
                                                    ],
                                                    "additionalProperties": false
                                                }
                                            }
                                        }
                                    },
                                    {
                                        "if": {
                                            "properties": {
                                                "type": {
                                                    "const": "Normal"
                                                }
                                            }
                                        },
                                        "then": {
                                            "properties": {
                                                "parameters": {
                                                    "type": "object",
                                                    "properties": {
                                                        "mean": {
                                                            "type": "number"
                                                        },
                                                        "stddev": {
                                                            "type": "number"
                                                        }
                                                    },
                                                    "required": [
                                                        "mean",
                                                        "stddev",
                                                        "length"
                                                    ],
                                                    "additionalProperties": false
                                                }
                                            }
                                        }
                                    },
                                    {
                                        "if": {
                                            "properties": {
                                                "type": {
                                                    "const": "Log-Normal"
                                                }
                                            }
                                        },
                                        "then": {
                                            "properties": {
                                                "parameters": {
                                                    "type": "object",
                                                    "properties": {
                                                        "mean": {
                                                            "type": "number"
                                                        },
                                                        "stddev": {
                                                            "type": "number"
                                                        }
                                                    },
                                                    "required": [
                                                        "mean",
                                                        "stddev",
                                                        "length"
                                                    ],
                                                    "additionalProperties": false
                                                }
                                            }
                                        }
                                    }
                                ]
                            }
                        },
                        "required": ["name", "description", "distribution"],
                        "additionalProperties": false
                    }
                },
                "Radius": {
                    "type": "number"
                },
                "MaxAttempt": {
                    "type": "integer"
                },
                "LogLikelihood": {
                    "type": "string"
                },
                "selection": {
                    "type": "string"
                }
            },
            "required": ["Variables", "LogLikelihood"],
            "additionalProperties": false
        },
        "EnvironmentRequirements": {
            "type": "object",
            "properties": {
                "OS": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "version": {
                                "type": "string"
                            }
                        },
                        "required": ["name", "version"],
                        "additionalProperties": false
                    }
                },
                "Check_default_dependences": {
                    "type": "object",
                    "properties": {
                        "required": {
                            "type": "boolean"
                        },
                        "default_yaml_path": {
                            "type": "string"
                        }
                    },
                    "required": ["required", "default_yaml_path"],
                    "additionalProperties": false
                },
                "CERN_ROOT": {
                    "type": "object",
                    "properties": {
                        "required": {
                            "type": "boolean"
                        },
                        "version": {
                            "type": "string"
                        },
                        "get_path_command": {
                            "type": "string"
                        },
                        "Dependencies": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "required": {
                                        "type": "boolean"
                                    },
                                    "check_command": {
                                        "type": "string"
                                    },
                                    "expected_output": {
                                        "type": "string"
                                    }
                                },
                                "required": [
                                    "name",
                                    "required",
                                    "check_command",
                                    "expected_output"
                                ]
                            }
                        }
                    },
                    "required": [
                        "required",
                        "version",
                        "get_path_command",
                        "Dependencies"
                    ],
                    "additionalProperties": false
                },
                "Python": {
                    "type": "object",
                    "properties": {
                        "version": {
                            "type": "string"
                        },
                        "Dependencies": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "required": {
                                        "type": "boolean"
                                    },
                                    "version": {
                                        "type": "string"
                                    }
                                },
                                "required": ["name", "required", "version"]
                            }
                        }
                    },
                    "required": ["version", "Dependencies"]
                }
            },
            "required": ["OS", "CERN_ROOT", "Python"],
            "additionalProperties": true
        },
        "Calculators": {
            "type": "object",
            "properties": {
                "make_paraller": {
                    "type": "integer"
                },
                "Modules": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "required_modules": {
                                "oneOf": [
                                    {
                                        "type": "string"
                                    },
                                    {
                                        "type": "array",
                                        "items": {
                                            "type": "string"
                                        }
                                    }
                                ]
                            },
                            "clone_shadow": {
                                "type": "boolean"
                            },
                            "path": {
                                "type": "string"
                            },
                            "source": {
                                "type": "string"
                            },
                            "installation": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            }
                        },
                        "required": [
                            "name",
                            "required_modules",
                            "clone_shadow",
                            "installation"
                        ],
                        "oneOf": [
                            {
                                "properties": {
                                    "modes": {
                                        "type": "object",
                                        "patternProperties": {
                                            "^[a-zA-Z0-9]+$": {
                                                "type": "object",
                                                "properties": {
                                                    "initialization": {
                                                        "$ref": "#/definitions/initialization"
                                                    },
                                                    "execution": {
                                                        "$ref": "#/definitions/execution"
                                                    }
                                                },
                                                "required": [
                                                    "initialization",
                                                    "execution"
                                                ]
                                            }
                                        },
                                        "additionalProperties": false
                                    }
                                },
                                "required": ["modes"]
                            },
                            {
                                "properties": {
                                    "initialization": {
                                        "$ref": "#/definitions/initialization"
                                    },
                                    "execution": {
                                        "$ref": "#/definitions/execution"
                                    }
                                },
                                "required": ["initialization", "execution"]
                            }
                        ]
                    }
                }
            },
            "required": ["make_paraller", "Modules"]
        },
        "SupportingLibrary": {
            "type": "object",
            "properties": {
                "path": {
                    "type": "string"
                },
                "make_paraller": {
                    "type": "integer"
                },
                "Modules": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "required_modules": {
                                "type": ["array", "null"],
                                "items": {
                                    "type": "string"
                                }
                            },
                            "installed": {
                                "type": "boolean"
                            },
                            "installation": {
                                "type": "object",
                                "properties": {
                                    "path": { "type": "string" },
                                    "source": { "type": "string" },
                                    "commands": {
                                        "type": "array",
                                        "items": { "type": "string" },
                                        "minItems": 1
                                    }
                                },
                                "required": ["path", "source", "commands"]
                            }
                        },
                        "required": [
                            "name",
                            "required_modules",
                            "installed",
                            "installation"
                        ]
                    }
                }
            },
            "required": ["path", "make_paraller", "Modules"]
        }
    },
    "required": ["Scan", "Sampling", "EnvironmentRequirements", "Calculators"],
    "additionalProperties": true
}
